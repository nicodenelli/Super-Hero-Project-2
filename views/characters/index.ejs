<%- include('../partials/header') %>

<body>
  <h1>Characters</h1>
  <table id="List">
    <thead>
      <tr>
        <th>Character</th>
        <th>Age</th>
        <th>Power Level</th>
        <th>Weapon</th>
        <th>Add Quote to Character</th>
        <th>Edit Character</th>
        
        
      </tr>
    </thead>
    <tbody>
        <% characters.forEach(c => { %> <!-- "characters" comes from controller -->
         <tr>
           <td><%= c.character %></td>
           <td><%= c.age %></td>
           <td><%= c.powerLevel %></td>
           <td><%= c.weapon %></td>
           <% if (user) { %>
           <td><a href="/supers/<%= c._id %>"><img id="batLogo" src="https://lafrikileria.com/98701/dc-comics-flexible-mousepad-batman-logo.jpg" alt="Batman-Logo"></a></td>
           <% } %>
           <% if (user) { %>
            <td><a href="/supers/<%= c._id %>/edit"><img id="batLogo" src="https://lafrikileria.com/98701/dc-comics-flexible-mousepad-batman-logo.jpg" alt="Batman-Logo"></a></a></td>
            <% } %>
          </tr>
         <% }) %>  
     </tbody>
    
  </table>
</body>
</html>
